<resources xmlns:tools="http://schemas.android.com/tools">


    <!--    Day Mode-->

    <style name="Theme.Pastore" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="textColor">@color/black</item>
        <item name="secondarytextColor">@color/white</item>

        <item name="backgroundColor">@color/backD</item>
        <item name="cardbackgroundcolor">@color/backD</item>

        <item name="secondaryColor">@color/secondarytextD</item>

        <item name="deviderColor">@color/deviderD</item>
        <item name="greenColor">@color/green</item>


        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@color/backD</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowAnimationStyle"> @style/WindowAnimationTransition </item>
    </style>


    <!--    Night Mode-->

    <style name="Theme.PastoreNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="textColor">@color/white</item>
        <item name="secondarytextColor">@color/black</item>

        <item name="backgroundColor">@color/backN</item>
        <item name="cardbackgroundcolor">@color/backN</item>

        <item name="secondaryColor">@color/secondarytextN</item>

        <item name="deviderColor">@color/deviderN</item>
        <item name="greenColor">@color/green</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@color/backN</item>
        <item name="android:windowLightStatusBar">false</item>


        <item name="android:windowAnimationStyle"> @style/WindowAnimationTransition </item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation" > @android:anim/fade_in </item>
        <item name="android:windowExitAnimation" > @android:anim/fade_out </item>

    </style>


</resources>